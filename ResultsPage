    let hours = myDate.getHours();
    
    let minutes = myDate.getMinutes();
    minutes = minutes < 10 ? '0' + minutes : minutes;

    let myTime = hours + " : " + minutes ;

    document.getElementById("refresh-time").textContent = "Last Refresh at: " + myTime;
</script>

